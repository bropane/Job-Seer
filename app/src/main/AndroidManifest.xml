<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.taylorsloan.jobseer"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".view.joblist.JobListActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.jobdetail.JobDetailActivity"
            android:label="@string/title_activity_job_detail"
            android:parentActivityName=".view.joblist.JobListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.taylorsloan.jobseer.view.joblist.JobListActivity"/>
        </activity>
        <activity
            android:name=".view.joblist.JobListContainerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>